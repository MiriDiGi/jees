<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- <File name="FileLogger" fileName="/dev/logs/jees.log"> -->
        <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}.%M() - %msg%n" /> -->
        <!-- </File> -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [%t] %logger{36}.%M() - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="s02" level="trace" />
        <Root level="debug">
            <!-- <AppenderRef ref="FileLogger" /> -->
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>

